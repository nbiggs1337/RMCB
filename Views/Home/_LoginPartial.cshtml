@model LUser

    <form action="/login/user" method="POST">
        <div class="form-group">
            <label asp-for="LEmail">Email Address</label>
            <span asp-validation-for="LEmail" class="alert-danger"></span>
            <input type="email" asp-for="LEmail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            
            
        </div>
        <div class="form-group">
            <label asp-for="LPassword">Password</label>
            <span asp-validation-for="LPassword" class="alert-danger"></span>
            <input asp-for="LPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        
        <button type="submit" class="btn btn-primary">Login Now</button>
    </form>