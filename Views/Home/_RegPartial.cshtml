@model User;
<form action="/register/user" method="POST">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName" class="alert-danger"></span>
            <input type="text" asp-for="FirstName" class="form-control" aria-describedby="name" placeholder="First Name">
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName" class="alert-danger"></span>
            <input type="text" asp-for="LastName" class="form-control" aria-describedby="name" placeholder="Last Name">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <span asp-validation-for="Email" class="alert-danger"></span>
            <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            
        </div>
        <div class="form-group">
            <label asp-for="ConfirmEmail">Confirm Email</label>
            <span asp-validation-for="ConfirmEmail" class="alert-danger"></span>
            <input asp-for="ConfirmEmail" type="Email" class="form-control" id="exampleInputPassword1" placeholder="Confirm Email">
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="alert-danger"></span>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            <small id="emailHelp" class="form-text text-muted">Must include at least 1 Uppercase, 1 Lowercase, 1 Number, 1 Special Character.</small>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
            <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
        </div>
        
        <button type="submit" class="btn btn-primary">Sign Up Now</button>
    </form>